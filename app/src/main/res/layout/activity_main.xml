<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4db6ac"
    android:fillViewport="true"
    android:padding="20dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        tools:context=".MainActivity">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/book"
            android:id="@+id/ivBook"/>

        <TextView
            android:id="@+id/txtHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ivBook"
            android:fontFamily="monospace"
            android:text="Book Issue Detais"
            android:textColor="@color/cardview_light_background"
            android:textFontWeight="@android:integer/config_longAnimTime"
            android:textSize="30sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtHead"
            app:boxBackgroundColor="#4db6ac"
            android:textColorHint="@color/cardview_light_background"
            android:background="#4db6ac"
            android:layout_marginTop="10dp"
            android:id="@+id/tilStuName">


        <EditText
            android:id="@+id/edtStuName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:maxLines="1"
            android:hint="Enter Student Name"
            android:textColor="@color/cardview_light_background"
            android:textSize="20sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tilStuName"
            app:boxBackgroundColor="#4db6ac"
            android:textColorHint="@color/cardview_light_background"
            android:background="#4db6ac"
            android:layout_marginTop="10dp"
            android:id="@+id/tilStuNo">

        <EditText
            android:id="@+id/edtStuEnrollment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:maxLines="1"
            android:hint="Enter Student Enrollment no."
            android:textColor="@color/cardview_light_background"
            android:textSize="20sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txtIssueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tilStuNo"
            android:layout_marginTop="10dp"
            android:fontFamily="monospace"
            android:text="Select issue Date"
            android:textColor="@color/cardview_light_background"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtIssueDate"
            android:layout_marginTop="10dp"
            android:fontFamily="monospace"
            android:text="Due Date"
            android:textColor="@color/cardview_light_background"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/txtselectBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDueDate"
            android:layout_marginTop="10dp"
            android:fontFamily="monospace"
            android:text="Select a book"
            android:textColor="@color/cardview_light_background"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spnBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtselectBook"
            android:layout_marginTop="15dp"
            android:fontFamily="monospace"
            android:textColor="@color/cardview_light_background"
            android:textSize="20sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spnBook"
            android:layout_marginTop="10dp"
            android:textColor="@color/cardview_light_background"
            android:text="Submit"
            android:id="@+id/btnSubmit"
            android:backgroundTint="@color/design_default_color_secondary_variant"
            android:textSize="20sp"/>


    </RelativeLayout>
</ScrollView>